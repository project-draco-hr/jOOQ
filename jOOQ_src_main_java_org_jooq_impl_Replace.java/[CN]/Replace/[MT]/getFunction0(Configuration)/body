{
  Field<?>[] args=getArguments();
switch (configuration.dialect().family()) {
case FIREBIRD:
case HSQLDB:
case MARIADB:
case MYSQL:
case POSTGRES:
case SQLITE:
{
      if (args.length == 2) {
        return function("replace",VARCHAR,args[0],args[1],val(""));
      }
 else {
        return function("replace",VARCHAR,args);
      }
    }
default :
{
    return function("replace",VARCHAR,args);
  }
}
}
