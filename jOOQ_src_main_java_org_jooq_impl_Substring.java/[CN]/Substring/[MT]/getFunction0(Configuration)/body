{
  String functionName="substring";
switch (configuration.getDialect()) {
case ASE:
case SQLSERVER:
{
      if (getArguments().length == 2) {
        return function(functionName,SQLDataType.VARCHAR,getArguments()[0],getArguments()[1],literal(Integer.MAX_VALUE));
      }
 else {
        break;
      }
    }
case DB2:
case DERBY:
case ORACLE:
case SQLITE:
  functionName="substr";
break;
}
return function(functionName,SQLDataType.VARCHAR,getArguments());
}
