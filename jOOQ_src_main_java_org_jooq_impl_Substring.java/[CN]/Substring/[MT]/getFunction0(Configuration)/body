{
  String functionName="substring";
switch (configuration.getDialect()) {
case ASE:
case SQLSERVER:
{
      if (getArguments().length == 2) {
        return function(functionName,SQLDataType.VARCHAR,getArguments()[0],getArguments()[1],inline(Integer.MAX_VALUE));
      }
 else {
        break;
      }
    }
case INGRES:
{
    if (getArguments().length == 2) {
      return field("{substring}({0}, {cast}({1} {as integer}))",SQLDataType.VARCHAR,getArguments());
    }
 else {
      return field("{substring}({0}, {cast}({1} {as integer}), {cast}({2} {as integer}))",SQLDataType.VARCHAR,getArguments());
    }
  }
case DB2:
case DERBY:
case ORACLE:
case SQLITE:
functionName="substr";
break;
}
return function(functionName,SQLDataType.VARCHAR,getArguments());
}
