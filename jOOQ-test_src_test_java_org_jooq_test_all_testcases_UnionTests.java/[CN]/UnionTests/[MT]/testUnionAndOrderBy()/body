{
  Field<String> x=val("A").as("x");
  assertEquals(asList("A","B","C"),create().select(x).union(select(val("B"))).union(select(val("C"))).orderBy(x).fetch(x));
  assertEquals(asList("C","B","A"),create().select(x).union(select(val("B"))).union(select(val("C"))).orderBy(x.desc()).fetch(x));
  assertEquals(asList("C","B"),create().select(x).union(select(val("B"))).union(select(val("C"))).orderBy(x.desc()).limit(2).fetch(x));
  assertEquals(asList("B","A"),create().select(x).union(select(val("B"))).union(select(val("C"))).orderBy(x.desc()).limit(2).offset(1).fetch(x));
  assertEquals(asList("A","B","B"),create().select(x).union(select(val("B"))).unionAll(select(val("B"))).orderBy(x).fetch(x));
  assertEquals(asList("A","B"),create().select(x).unionAll(select(val("B"))).union(select(val("B"))).orderBy(x).fetch(x));
  assertEquals(asList("A","B","B"),create().select(x).unionAll(select(val("B"))).union(select(val("B"))).unionAll(select(val("B"))).orderBy(x).fetch(x));
}
