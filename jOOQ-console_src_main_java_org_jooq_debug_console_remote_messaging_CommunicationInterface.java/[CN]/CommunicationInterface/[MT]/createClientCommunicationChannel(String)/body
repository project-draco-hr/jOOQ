{
  Socket socket=null;
  for (int i=1; i >= 0; i--) {
    try {
      socket=new Socket(ip,port);
      break;
    }
 catch (    IOException e) {
      if (i == 0) {
        throw new RuntimeException(e);
      }
    }
    try {
      Thread.sleep(100);
    }
 catch (    Exception e) {
    }
  }
  if (socket == null) {
    throw new IllegalStateException("Failed to connect to " + ip + "!");
  }
  messagingInterface=new MessagingInterface(this,socket);
  notifyOpen();
}
