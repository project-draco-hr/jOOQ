{
switch (context.configuration().dialect().family()) {
case ASE:
case POSTGRES:
case SQLITE:
case SQLSERVER:
    break;
case FIREBIRD:
  context.literal("RDB$DATABASE");
break;
case HSQLDB:
context.literal("INFORMATION_SCHEMA").sql(".").literal("SYSTEM_USERS");
break;
case CUBRID:
context.literal("db_root");
break;
case INGRES:
context.keyword("(select 1 as dual) as dual");
break;
case DB2:
context.literal("SYSIBM").sql(".").literal("DUAL");
break;
case DERBY:
context.literal("SYSIBM").sql(".").literal("SYSDUMMY1");
break;
case SYBASE:
context.literal("SYS").sql(".").literal("DUMMY");
break;
default :
context.keyword("dual");
break;
}
}
