{
  if (literal == null) {
    return this;
  }
  SQLDialect family=configuration.dialect().family();
  boolean needsQuote=(QUOTED == cachedRenderNameStyle && family != SQLDialect.SQLITE) || (family == SQLDialect.SQLITE && SQLITE_KEYWORDS.contains(literal.toUpperCase()));
  if (!needsQuote) {
    if (LOWER == cachedRenderNameStyle) {
      literal=literal.toLowerCase();
    }
 else     if (UPPER == cachedRenderNameStyle) {
      literal=literal.toUpperCase();
    }
    sql(literal);
  }
 else {
switch (family) {
case MARIADB:
case MYSQL:
      sql("`").sql(StringUtils.replace(literal,"`","``")).sql("`");
    break;
case CUBRID:
case DERBY:
case FIREBIRD:
case H2:
case HSQLDB:
case POSTGRES:
case SQLITE:
default :
  sql('"').sql(StringUtils.replace(literal,"\"","\"\"")).sql('"');
break;
}
}
return this;
}
