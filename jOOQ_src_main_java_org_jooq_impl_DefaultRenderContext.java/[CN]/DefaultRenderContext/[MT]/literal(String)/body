{
  RenderNameStyle style=configuration.getSettings().getRenderNameStyle();
  if (RenderNameStyle.LOWER.equals(style)) {
    sql(literal.toLowerCase());
  }
 else   if (RenderNameStyle.UPPER.equals(style)) {
    sql(literal.toUpperCase());
  }
 else   if (RenderNameStyle.AS_IS.equals(style)) {
    sql(literal);
  }
 else {
switch (configuration.getDialect()) {
case MYSQL:
      sql("`").sql(literal).sql("`");
    break;
case DB2:
case DERBY:
case H2:
case HSQLDB:
case INGRES:
case ORACLE:
case POSTGRES:
  sql('"').sql(literal).sql('"');
break;
case SQLITE:
sql(literal);
break;
case ASE:
case SQLSERVER:
case SYBASE:
sql("[").sql(literal).sql("]");
break;
default :
sql(literal);
break;
}
}
return this;
}
