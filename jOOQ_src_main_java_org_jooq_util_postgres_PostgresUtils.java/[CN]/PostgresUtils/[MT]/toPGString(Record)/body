{
  StringBuilder sb=new StringBuilder();
  sb.append("(");
  String separator="";
  for (  Object a : r.intoArray()) {
    sb.append(separator);
    if (a != null) {
      if (a instanceof byte[])       sb.append(toPGString((byte[])a));
 else       sb.append("\"").append(toPGString(a).replace("\\","\\\\").replace("\"","\\\"")).append("\"");
    }
    separator=",";
  }
  sb.append(")");
  return sb.toString();
}
