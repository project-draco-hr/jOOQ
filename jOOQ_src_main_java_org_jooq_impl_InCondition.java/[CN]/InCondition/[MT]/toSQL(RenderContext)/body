{
  List<Field<?>> list=Arrays.asList(values);
  if (list.size() > IN_LIMIT) {
switch (context.getDialect()) {
case ORACLE:
case INGRES:
case SQLSERVER:
{
        context.sql("(").formatIndentLockStart();
        for (int i=0; i < list.size(); i+=IN_LIMIT) {
          if (i > 0) {
            if (operator == InOperator.IN) {
              context.keyword(" or");
            }
 else {
              context.keyword(" and");
            }
            context.formatSeparator();
          }
          toSQLSubValues(context,list.subList(i,Math.min(i + IN_LIMIT,list.size())));
        }
        context.sql(")").formatIndentLockEnd();
        break;
      }
default :
{
      toSQLSubValues(context,list);
      break;
    }
}
}
 else {
toSQLSubValues(context,list);
}
}
