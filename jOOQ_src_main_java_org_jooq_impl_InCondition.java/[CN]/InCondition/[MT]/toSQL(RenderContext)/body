{
  List<Field<?>> list=Arrays.asList(values);
  if (list.size() > IN_LIMIT) {
switch (context.configuration().dialect()) {
case FIREBIRD:
case INGRES:
case ORACLE:
case SQLSERVER:
{
        context.sql("(").formatIndentStart().formatNewLine();
        for (int i=0; i < list.size(); i+=IN_LIMIT) {
          if (i > 0) {
            if (operator == SubqueryOperator.IN) {
              context.formatSeparator().keyword("or ");
            }
 else {
              context.formatSeparator().keyword("and ");
            }
          }
          toSQLSubValues(context,list.subList(i,Math.min(i + IN_LIMIT,list.size())));
        }
        context.formatIndentEnd().formatNewLine().sql(")");
        break;
      }
default :
{
      toSQLSubValues(context,list);
      break;
    }
}
}
 else {
toSQLSubValues(context,list);
}
}
