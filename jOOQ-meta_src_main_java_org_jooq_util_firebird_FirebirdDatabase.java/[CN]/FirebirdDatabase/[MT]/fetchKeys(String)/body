{
  return create().select(RDB$RELATION_CONSTRAINTS.RDB$CONSTRAINT_NAME.trim(),RDB$RELATION_CONSTRAINTS.RDB$RELATION_NAME.trim(),RDB$INDEX_SEGMENTS.RDB$FIELD_NAME.trim()).from(RDB$RELATION_CONSTRAINTS).join(RDB$INDEX_SEGMENTS).on(RDB$INDEX_SEGMENTS.RDB$INDEX_NAME.eq(RDB$RELATION_CONSTRAINTS.RDB$INDEX_NAME)).where(RDB$RELATION_CONSTRAINTS.RDB$CONSTRAINT_TYPE.eq(constraintType)).fetch();
}
