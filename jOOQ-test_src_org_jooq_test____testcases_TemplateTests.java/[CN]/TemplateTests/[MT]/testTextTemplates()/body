{
class TextTemplate implements Template {
    private final String sql;
    public TextTemplate(    String sql){
      this.sql=sql;
    }
    @Override public QueryPart transform(    Object... input){
      return queryPart(sql,input);
    }
  }
  Record r1=create().resultQuery(new TextTemplate("SELECT ? as x FROM t_author a WHERE a.id IN (?, ?) ORDER BY a.id"),1,2,3).fetchOne();
  assertTextTemplateRecord(r1);
  Record r2=create().resultQuery(new TextTemplate("SELECT {0} as x FROM t_author a WHERE a.id IN ({1}, {2}) ORDER BY a.id"),val(1),inline(2),inline(3)).fetchOne();
  assertTextTemplateRecord(r2);
}
