{
  List<ColumnDefinition> result=new ArrayList<ColumnDefinition>();
  int position=1;
  for (  Record record : create().fetchMany("sp_help '" + getName() + "'").get(1)) {
    String p=record.getValueAsString("Prec");
    String s=record.getValueAsString("Scale");
    int precision=0;
    int scale=0;
    if (p != null && !"null".equalsIgnoreCase(p.trim()))     precision=Integer.valueOf(p.trim());
    if (s != null && !"null".equalsIgnoreCase(s.trim()))     scale=Integer.valueOf(s.trim());
    DataTypeDefinition type=new DefaultDataTypeDefinition(getDatabase(),record.getValueAsString("Type"),precision,scale);
    result.add(new DefaultColumnDefinition(getDatabase().getTable(getName()),record.getValueAsString("Column_name"),position++,type,record.getValueAsBoolean("Identity",false),null));
  }
  return result;
}
