{
  if (size() > 0) {
    String separator="";
    boolean restoreQualify=context.qualify();
    boolean supportsQualify=asList(POSTGRES,SQLITE).contains(context.getDialect()) ? false : restoreQualify;
    for (    Entry<Field<?>,Field<?>> entry : entrySet()) {
      context.sql(separator);
      if (!"".equals(separator)) {
        context.formatNewLine();
      }
      context.qualify(supportsQualify).sql(entry.getKey()).qualify(restoreQualify).sql(" = ").sql(entry.getValue());
      separator=", ";
    }
  }
 else {
    context.sql("[ no fields are updated ]");
  }
}
