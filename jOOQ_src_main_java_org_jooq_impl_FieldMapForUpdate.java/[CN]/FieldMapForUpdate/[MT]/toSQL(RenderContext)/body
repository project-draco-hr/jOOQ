{
  if (size() > 0) {
    String separator="";
    for (    Entry<Field<?>,Field<?>> entry : entrySet()) {
      context.sql(separator);
      if (!"".equals(separator)) {
        context.formatNewLine();
      }
      context.literal(entry.getKey().getName()).sql(" = ").sql(entry.getValue());
      separator=", ";
    }
  }
 else {
    context.sql("[ no fields are updated ]");
  }
}
