{
  PreparedStatement stmt=null;
  if (bookIds == null)   bookIds=new Object[0];
  String sql=create(connection).select().from(THE_BOOK).where(TBuch.ID.in(INTEGER.convert(bookIds))).orderBy(TBuch.ID.asc()).getSQL();
  stmt=connection.prepareStatement(sql);
  int i=1;
  for (  Object o : bookIds) {
    stmt.setObject(i++,o);
  }
  return stmt.executeQuery();
}
