{
  Result<Record2<Integer,Integer>> result1=create().select(TAuthor_ID(),TBook_ID()).from(TAuthor()).join(TBook()).on(TAuthor_ID().eq(TBook_AUTHOR_ID())).orderBy(TBook_ID()).limit(2).fetch();
  assertEquals(2,result1.size());
  assertEquals(asList(1,1),result1.getValues(TAuthor_ID()));
  assertEquals(asList(1,2),result1.getValues(TBook_ID()));
  Result<Record2<Integer,Integer>> result2=create().select(TAuthor_ID(),TBook_ID()).from(TAuthor()).join(TBook()).on(TAuthor_ID().eq(TBook_AUTHOR_ID())).orderBy(TBook_ID()).limit(2).offset(2).fetch();
  assertEquals(2,result2.size());
  assertEquals(asList(2,2),result2.getValues(TAuthor_ID()));
  assertEquals(asList(3,4),result2.getValues(TBook_ID()));
}
