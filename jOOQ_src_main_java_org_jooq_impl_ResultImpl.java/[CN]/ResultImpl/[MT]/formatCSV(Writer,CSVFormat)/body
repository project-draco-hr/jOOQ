{
  try {
    if (format.header()) {
      String sep1="";
      for (      Field<?> field : fields.fields) {
        writer.append(sep1);
        writer.append(formatCSV0(field.getName(),""));
        sep1=format.delimiter();
      }
      writer.append(format.newline());
    }
    for (    Record record : this) {
      String sep2="";
      for (int index=0; index < fields.fields.length; index++) {
        writer.append(sep2);
        writer.append(formatCSV0(record.getValue(index),format.nullString()));
        sep2=format.delimiter();
      }
      writer.append(format.newline());
    }
  }
 catch (  java.io.IOException e) {
    throw new IOException("Exception while writing CSV",e);
  }
}
