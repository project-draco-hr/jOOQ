{
  if (value == null || "".equals(value)) {
    if (StringUtils.isEmpty(nullString)) {
      return "\"\"";
    }
 else {
      return nullString;
    }
  }
  String result=format0(value,false);
  if (StringUtils.containsAny(result,',',';','\t','"','\n','\r','\'','\\')) {
    return "\"" + result.replace("\\","\\\\").replace("\"","\"\"") + "\"";
  }
 else {
    return result;
  }
}
