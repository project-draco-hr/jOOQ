{
  try {
    assertEquals(Integer.valueOf(1),create().selectOne().from(TBook()).where(TBook_AUTHOR_ID().equal(1)).having(count().greaterOrEqual(2)).fetchOne(0));
    assertEquals(null,create().selectOne().from(TBook()).where(TBook_AUTHOR_ID().equal(1)).having(count().greaterOrEqual(3)).fetchOne(0));
  }
 catch (  SQLException e) {
switch (getDialect()) {
case SQLITE:
      log.info("SKIPPING","HAVING without GROUP BY is not supported: " + e.getMessage());
    break;
default :
  throw e;
}
}
}
