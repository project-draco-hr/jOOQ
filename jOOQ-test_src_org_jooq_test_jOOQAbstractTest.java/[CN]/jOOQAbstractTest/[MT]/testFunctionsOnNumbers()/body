assertEquals(Integer.valueOf(1),record.getValue(1));
assertEquals(Integer.valueOf(0),record.getValue(2));
assertEquals(Integer.valueOf(-1),record.getValue(3));
assertEquals(Integer.valueOf(-1),record.getValue(4));
