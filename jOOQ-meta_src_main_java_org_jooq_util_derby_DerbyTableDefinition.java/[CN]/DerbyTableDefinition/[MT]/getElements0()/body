{
  List<ColumnDefinition> result=new ArrayList<ColumnDefinition>();
  for (  Record record : create().select(Syscolumns.COLUMNNAME,Syscolumns.COLUMNNUMBER,Syscolumns.COLUMNDATATYPE,Syscolumns.AUTOINCREMENTINC).from(SYSCOLUMNS).where(Syscolumns.REFERENCEID.equal(tableid)).orderBy(Syscolumns.COLUMNNUMBER).fetch()) {
    String typeName=record.getValueAsString(Syscolumns.COLUMNDATATYPE);
    Number precision=parsePrecision(typeName);
    Number scale=parseScale(typeName);
    DataTypeDefinition type=new DefaultDataTypeDefinition(getDatabase(),getSchema(),typeName,precision,scale);
    ColumnDefinition column=new DefaultColumnDefinition(getDatabase().getTable(getSchema(),getName()),record.getValue(Syscolumns.COLUMNNAME),record.getValue(Syscolumns.COLUMNNUMBER),type,null != record.getValue(Syscolumns.AUTOINCREMENTINC),null);
    result.add(column);
  }
  return result;
}
