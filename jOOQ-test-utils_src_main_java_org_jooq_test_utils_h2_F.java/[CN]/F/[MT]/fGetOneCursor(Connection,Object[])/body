{
  PreparedStatement stmt=null;
  if (bookIds == null)   bookIds=new Object[0];
  String sql=create(connection).select().from(table("t_book")).where(field("id",Integer.class).in(INTEGER.convert(bookIds))).orderBy(field("id").asc()).getSQL();
  stmt=connection.prepareStatement(sql);
  int i=1;
  for (  Object o : bookIds) {
    stmt.setObject(i++,o);
  }
  return stmt.executeQuery();
}
