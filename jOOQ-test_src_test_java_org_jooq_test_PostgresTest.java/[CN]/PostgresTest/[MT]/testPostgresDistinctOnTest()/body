{
  Result<Record2<Integer,Integer>> r1=create().selectDistinct(T_BOOK.ID,T_BOOK.AUTHOR_ID).on(T_BOOK.AUTHOR_ID).from(T_BOOK).orderBy(T_BOOK.AUTHOR_ID).fetch();
  Result<Record2<Integer,Integer>> r2=create().select(T_BOOK.ID,T_BOOK.AUTHOR_ID).distinctOn(T_BOOK.AUTHOR_ID).from(T_BOOK).orderBy(T_BOOK.AUTHOR_ID).fetch();
  assertEquals(r1,r2);
  assertEquals(asList(1,3),r1.getValues(T_BOOK.ID));
  assertEquals(asList(1,2),r1.getValues(T_BOOK.AUTHOR_ID));
}
