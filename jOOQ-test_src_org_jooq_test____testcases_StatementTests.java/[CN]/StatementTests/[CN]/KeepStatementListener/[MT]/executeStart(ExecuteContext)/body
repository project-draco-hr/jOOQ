{
  final PreparedStatement delegate=ctx.statement();
  final PreparedStatement s=(PreparedStatement)Proxy.newProxyInstance(PreparedStatement.class.getClassLoader(),new Class[]{PreparedStatement.class},new InvocationHandler(){
    @Override public Object invoke(    Object proxy,    Method method,    Object[] args) throws Throwable {
      if (method.getName().equals("close")) {
        closed++;
      }
      return Reflect.on(delegate).call(method.getName(),args).get();
    }
  }
);
  ctx.statement(s);
  statements.add(delegate);
}
