{
switch (context.configuration().dialect()) {
case FIREBIRD:
case INGRES:
case SQLITE:
{
      context.sql(create(context).delete(table));
      break;
    }
default :
{
    context.keyword("truncate table ");
    context.sql(table);
    if (context.configuration().dialect() == SQLDialect.DB2) {
      context.keyword(" immediate");
    }
    break;
  }
}
}
