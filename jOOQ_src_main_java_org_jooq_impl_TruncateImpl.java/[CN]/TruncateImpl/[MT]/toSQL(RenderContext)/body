{
switch (context.configuration().dialect()) {
case FIREBIRD:
case SQLITE:
{
      context.visit(create(context).delete(table));
      break;
    }
default :
{
    context.start(TRUNCATE_TRUNCATE).keyword("truncate table").sql(" ").visit(table);
    if (restartIdentity != null) {
      context.formatSeparator().keyword(restartIdentity ? "restart identity" : "continue identity");
    }
    if (cascade != null) {
      context.formatSeparator().keyword(cascade ? "cascade" : "restrict");
    }
    context.end(TRUNCATE_TRUNCATE);
    break;
  }
}
}
