{
  List<B> result1=create().select(TBook_ID(),TBook_TITLE(),TBook_AUTHOR_ID(),TAuthor_FIRST_NAME(),TAuthor_LAST_NAME()).from(TBook()).join(TAuthor()).on(TBook_AUTHOR_ID().equal(TAuthor_ID())).orderBy(TBook_ID()).fetch().into(TBook().getRecordType());
  assertEquals(4,result1.size());
  for (int i=0; i < 4; i++) {
    assertEquals(BOOK_IDS.get(i),result1.get(i).getValue(TBook_ID()));
    assertEquals(BOOK_TITLES.get(i),result1.get(i).getValue(TBook_TITLE()));
    assertEquals(BOOK_AUTHOR_IDS.get(i),result1.get(i).getValue(TBook_AUTHOR_ID()));
  }
}
