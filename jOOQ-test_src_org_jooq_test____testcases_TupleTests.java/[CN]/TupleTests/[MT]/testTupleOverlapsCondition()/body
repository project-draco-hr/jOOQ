{
  long now=System.currentTimeMillis();
  long day=1000L * 60 * 60* 24;
  assertEquals(2,(int)create().selectCount().from(TAuthor()).where(tuple(TAuthor_DATE_OF_BIRTH(),currentDate()).overlaps(new Date(now - day),new Date(now + day))).fetchOne(0,Integer.class));
  if (asList(INGRES).contains(getDialect())) {
    log.info("SKIPPING","Ingres INTERVAL OVERLAPS tests");
  }
 else {
    assertEquals(1,(int)create().selectOne().where(tuple(new Date(now),new DayToSecond(3)).overlaps(new Date(now + day),new DayToSecond(3))).fetchOne(0,Integer.class));
    assertEquals(1,(int)create().selectOne().where(tuple(new Date(now),3).overlaps(new Date(now + day),3)).fetchOne(0,Integer.class));
  }
  assertEquals(1,(int)create().selectOne().where(tuple(1,3).overlaps(2,4)).and(tuple(1,4).overlaps(2,3)).and(tuple(1,4).overlaps(3,2)).and(not(tuple(1,2).overlaps(3,4))).fetchOne(0,Integer.class));
}
