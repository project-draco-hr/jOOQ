{
switch (configuration.getDialect()) {
case DB2:
case DERBY:
case INGRES:
case SQLITE:
case SYBASE:
    return new Function<Integer>("8 * length",SQLDataType.INTEGER,argument);
case SQLSERVER:
  return new Function<Integer>("8 * len",SQLDataType.INTEGER,argument);
case ORACLE:
return new Function<Integer>("8 * lengthb",SQLDataType.INTEGER,argument);
}
return new Function<Integer>("bit_length",SQLDataType.INTEGER,argument);
}
