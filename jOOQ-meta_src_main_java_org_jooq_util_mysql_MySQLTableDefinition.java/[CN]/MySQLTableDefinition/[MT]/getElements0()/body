{
  List<ColumnDefinition> result=new ArrayList<ColumnDefinition>();
  for (  Record record : create().select(Columns.ORDINAL_POSITION,Columns.COLUMN_NAME,Columns.COLUMN_COMMENT,Columns.COLUMN_TYPE,Columns.DATA_TYPE,Columns.IS_NULLABLE,Columns.CHARACTER_MAXIMUM_LENGTH,Columns.NUMERIC_PRECISION,Columns.NUMERIC_SCALE,Columns.EXTRA).from(COLUMNS).where(TABLE_SCHEMA.equal(getSchema().getName())).and(TABLE_NAME.equal(getName())).orderBy(ORDINAL_POSITION).fetch()) {
    String dataType=record.getValue(Columns.DATA_TYPE);
    if (getDatabase().supportsUnsignedTypes()) {
      if (asList("tinyint","smallint","mediumint","int","bigint").contains(dataType.toLowerCase())) {
        if (record.getValue(Columns.COLUMN_TYPE).toLowerCase().contains("unsigned")) {
          dataType+="unsigned";
        }
      }
    }
    DataTypeDefinition type=new DefaultDataTypeDefinition(getDatabase(),getSchema(),dataType,record.getValue(Columns.CHARACTER_MAXIMUM_LENGTH),record.getValue(Columns.NUMERIC_PRECISION),record.getValue(Columns.NUMERIC_SCALE),getName() + "_" + record.getValue(Columns.COLUMN_NAME));
    ColumnDefinition column=new DefaultColumnDefinition(getDatabase().getTable(getSchema(),getName()),record.getValue(Columns.COLUMN_NAME),record.getValue(Columns.ORDINAL_POSITION,int.class),type,record.getValue(Columns.IS_NULLABLE,boolean.class),"auto_increment".equalsIgnoreCase(record.getValue(Columns.EXTRA)),record.getValue(Columns.COLUMN_COMMENT));
    result.add(column);
  }
  return result;
}
