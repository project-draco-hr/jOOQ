{
  if (nullsFirst || nullsLast) {
switch (context.configuration().dialect()) {
case DB2:
case ASE:
case CUBRID:
case INGRES:
case MYSQL:
case SQLITE:
case SQLSERVER:
case SYBASE:
{
        Field<Integer> ifNull=nullsFirst ? zero() : one();
        Field<Integer> ifNotNull=nullsFirst ? one() : zero();
        context.sql(nvl2(field,ifNotNull,ifNull)).sql(", ").sql(field).sql(" ").keyword(order.toSQL());
        break;
      }
default :
{
      context.sql(field).sql(" ").keyword(order.toSQL());
      if (nullsFirst) {
        context.keyword(" nulls first");
      }
 else {
        context.keyword(" nulls last");
      }
      break;
    }
}
}
 else {
context.sql(field).sql(" ").keyword(order.toSQL());
}
}
