{
  if (nullsFirst || nullsLast) {
switch (context.configuration().dialect().family()) {
case DB2:
case ASE:
case CUBRID:
case INGRES:
case MARIADB:
case MYSQL:
case SQLITE:
case SQLSERVER:
case SYBASE:
{
        Field<Integer> ifNull=nullsFirst ? zero() : one();
        Field<Integer> ifNotNull=nullsFirst ? one() : zero();
        context.visit(nvl2(field,ifNotNull,ifNull)).sql(", ").visit(field).sql(" ").keyword(order.toSQL());
        break;
      }
default :
{
      context.visit(field).sql(" ").keyword(order.toSQL());
      if (nullsFirst) {
        context.sql(" ").keyword("nulls first");
      }
 else {
        context.sql(" ").keyword("nulls last");
      }
      break;
    }
}
}
 else {
context.visit(field).sql(" ").keyword(order.toSQL());
}
}
