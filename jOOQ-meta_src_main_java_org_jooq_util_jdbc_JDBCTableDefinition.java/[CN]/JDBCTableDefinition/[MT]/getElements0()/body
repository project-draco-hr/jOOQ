{
  List<ColumnDefinition> result=new ArrayList<ColumnDefinition>();
  int ordinal=0;
  for (  Field<?> field : table.getFields()) {
    DataTypeDefinition type=new DefaultDataTypeDefinition(getDatabase(),getSchema(),field.getDataType().getTypeName(),0,0,0,null);
    ColumnDefinition column=new DefaultColumnDefinition(getDatabase().getTable(getSchema(),getName()),field.getName(),ordinal,type,true,false,null);
    result.add(column);
    ordinal++;
  }
  return result;
}
