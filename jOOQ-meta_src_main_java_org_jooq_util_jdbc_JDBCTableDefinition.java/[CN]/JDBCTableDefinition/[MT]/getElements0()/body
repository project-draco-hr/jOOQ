{
  List<ColumnDefinition> result=new ArrayList<ColumnDefinition>();
  int ordinal=0;
  for (  Field<?> field : table.fields()) {
    DataTypeDefinition type=new DefaultDataTypeDefinition(getDatabase(),getSchema(),field.getDataType().getTypeName(),field.getDataType().length(),field.getDataType().precision(),field.getDataType().scale(),null);
    ColumnDefinition column=new DefaultColumnDefinition(getDatabase().getTable(getSchema(),getName()),field.getName(),ordinal,type,true,false,null);
    result.add(column);
    ordinal++;
  }
  return result;
}
