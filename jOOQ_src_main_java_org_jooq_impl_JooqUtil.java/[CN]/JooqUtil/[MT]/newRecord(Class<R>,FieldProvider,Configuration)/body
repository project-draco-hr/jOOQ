{
  try {
    R result;
    if (type == RecordImpl.class) {
      result=(R)new RecordImpl(provider);
    }
 else {
      result=type.newInstance();
    }
    result.attach(configuration);
    return result;
  }
 catch (  Exception e) {
    throw new IllegalStateException("Could not construct new record. Please report this issue",e);
  }
}
