{
  return Utils.newRecord((Class<AbstractRecord>)getClass(),fields.fields.fields,configuration()).operate(new RecordOperation<AbstractRecord,RuntimeException>(){
    @Override public AbstractRecord operate(    AbstractRecord record) throws RuntimeException {
      Value<?>[] v=getValues();
      for (int i=0; i < v.length; i++) {
        record.setValue(i,new Value<Object>(v[i].getOriginal()));
      }
      return record;
    }
  }
);
}
