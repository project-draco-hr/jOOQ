{
  if (rows == Integer.MIN_VALUE) {
    sb.append("unbounded preceding");
  }
 else   if (rows == Integer.MAX_VALUE) {
    sb.append("unbounded following");
  }
 else   if (rows < 0) {
    sb.append(-rows);
    sb.append(" preceding");
  }
 else   if (rows > 0) {
    sb.append(rows);
    sb.append(" following");
  }
 else {
    sb.append("current row");
  }
}
